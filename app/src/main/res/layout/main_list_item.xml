<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMainListItemBackground"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/list_item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@null"
        android:padding="2dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_filter" />

    <android.support.v7.widget.LinearLayoutCompat

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorMainListItemTextBackgroud"
        android:orientation="vertical"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_item_image"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/list_item_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMainListItemHeaderText"
            android:textSize="@dimen/sizeMainListItemHeader"
            tools:text="رینگ نو در حد سالم به قیمت روز بی بی اس ای" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/list_item_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMainListItemLocationText"
            android:textSize="@dimen/sizeMainListItemLocation"
            tools:text="تهران، پرند" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/list_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMainListItemPriceText"
            android:textDirection="ltr"
            android:textSize="@dimen/sizeMainListItemPrice"
            tools:text="1000 تومان" />
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.constraint.ConstraintLayout>